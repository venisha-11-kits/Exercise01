import java.util.Scanner;

class CashTree {
 protected String name;
 protected int codeNo;
 protected String location;
 protected String custName;
 protected int accNo;
 protected double balance;

 public CashTree(String name, int codeNo, String location, String custName, int accNo, double balance) {
     this.name = name;
     this.codeNo = codeNo;
     this.location = location;
     this.custName = custName;
     this.accNo = accNo;
     this.balance = balance;
 }

 public void viewBalance() {
     System.out.println("Account Holder: " + custName);
     System.out.println("Account Number: " + accNo);
     System.out.println("Balance       : " + balance);
 }

 public void withdraw(double amount) {
     if (amount <= balance) {
         balance -= amount;
         System.out.println("Withdrawal successful. Amount: " + amount);
     } else {
         System.out.println("Insufficient Balance!");
     }
 }

 public void deposit(double amount) {
     balance += amount;
     System.out.println("Deposit successful. Amount: " + amount);
 }
}

class SBI_Bank extends CashTree {
 private final double serviceCharge = 5;
 private final double interestRate = 0.06;

 public SBI_Bank(String custName, int accNo, double balance) {
     super("SBI Bank", 101, "Chennai", custName, accNo, balance);
 }

 public void withdraw(double amount) {
     if (amount + serviceCharge <= balance) {
         balance -= (amount + serviceCharge);
         System.out.println("SBI: Withdrawal of " + amount + " successful. Service charge: " + serviceCharge);
     } else {
         System.out.println("SBI: Insufficient Balance!");
     }
 }

 public void deposit(double amount) {
     double interest = amount * interestRate;
     balance += (amount + interest);
     System.out.println("SBI: Deposit of " + amount + " successful with interest " + interest);
 }
}

class HDFC_Bank extends CashTree {
 private final double serviceCharge = 10;
 private final double interestRate = 0.05;

 public HDFC_Bank(String custName, int accNo, double balance) {
     super("HDFC Bank", 102, "Bangalore", custName, accNo, balance);
 }

 public void withdraw(double amount) {
     if (amount + serviceCharge <= balance) {
         balance -= (amount + serviceCharge);
         System.out.println("HDFC: Withdrawal of " + amount + " successful. Service charge: " + serviceCharge);
     } else {
         System.out.println("HDFC: Insufficient Balance!");
     }
 }

 public void deposit(double amount) {
     double interest = amount * interestRate;
     balance += (amount + interest);
     System.out.println("HDFC: Deposit of " + amount + " successful with interest " + interest);
 }
}

public class ATMSystem {
 public static void main(String[] args) {
     Scanner sc = new Scanner(System.in);
     CashTree bank = null;

     System.out.println("Choose Bank:");
     System.out.println("1. SBI Bank");
     System.out.println("2. HDFC Bank");
     int choice = sc.nextInt();

     sc.nextLine(); 
     System.out.print("Enter Customer Name: ");
     String custName = sc.nextLine();
     System.out.print("Enter Account Number: ");
     int accNo = sc.nextInt();
     System.out.print("Enter Initial Balance: ");
     double balance = sc.nextDouble();

     if (choice == 1) {
         bank = new SBI_Bank(custName, accNo, balance);
     } else if (choice == 2) {
         bank = new HDFC_Bank(custName, accNo, balance);
     } else {
         System.out.println("Invalid choice!");
         System.exit(0);
     }

     int option;
     do {
         System.out.println("\n--- ATM Menu ---");
         System.out.println("1. View Balance");
         System.out.println("2. Withdraw");
         System.out.println("3. Deposit");
         System.out.println("4. Exit");
         System.out.print("Enter choice: ");
         option = sc.nextInt();

         switch (option) {
             case 1:
                 bank.viewBalance();
                 break;
             case 2:
                 System.out.print("Enter withdrawal amount: ");
                 double wAmt = sc.nextDouble();
                 bank.withdraw(wAmt);
                 break;
             case 3:
                 System.out.print("Enter deposit amount: ");
                 double dAmt = sc.nextDouble();
                 bank.deposit(dAmt);
                 break;
             case 4:
                 System.out.println("Thank you for banking with us!");
                 break;
             default:
                 System.out.println("Invalid option!");
         }
     } while (option != 4);

     sc.close();
 }
}
